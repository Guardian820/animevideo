{% extends '::base.html.twig' %}

{% block title %}{{ anime.name }}{% endblock %}

{% block content %}
    <legend>
        {{ anime.name }}
        {% if is_granted('DELETE', anime) %}
            <button class="pull-right btn btn-danger" data-toggle="modal" data-target="#delete">{{ icon('trash') }}</button>
        {% endif %}
    </legend>
    <div class="row">
        <div class="col-md-3">
            <img src="{{ asset('img/dummy.png') }}" /><br />
        </div>
        <div class="col-md-9">
            {# We have to make an exception: Due to the camelcasing of 'viewCount' and the
            logic below, our l18n key has to be camelcased, too #}
            {% set fields = ['name', 'genre', 'viewCount', 'episodes', 'description'] %}
                {% for field in fields %}
                    <div class="row">
                        <div class="col-md-3 h4" style="text-align:right">
                            {% set tmp_translate = 'show_anime.' ~ field %}
                            {{ tmp_translate|trans }}
                        </div>
                        <div class="col-md-9">
                            {# TODO: Reduce attribute() calls #}
                            {% if attribute(anime, field) is iterable %}{# for 'genre' #}
                                {% for label in attribute(anime, field) %}
                                    <span class="tag label label-info">{{ label }}</span>
                                {% endfor %}
                            {% else %}
                                {{ attribute(anime, field) }}
                            {% endif %}
                        </div>
                    </div>
                {% endfor %}
        </div>
    </div>
    <div class="modal fade" id="delete">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">{{ 'delete_anime.title'|trans }}</h4>
                </div>
                <div class="modal-body">{{ 'delete_anime.body'|trans }}</div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">{{ 'delete_anime.close'|trans }}</button>
                    <a type="button" class="btn btn-primary" href="{{ url('facemanga_main_anime_delete', {'id': anime.id}) }}">{{ 'delete_anime.delete'|trans }}</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}